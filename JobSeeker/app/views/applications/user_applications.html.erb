<h1>My Applications</h1>

<%= link_to "Posted Jobs", user_classfields_path %>
<%= link_to "Job applications", user_applications_path%>

<% if @applications.any? %>
  <table>
    <thead>
      <tr>
        <th>Job</th>
        <th>Job poster</th>
        <th>Status</th>
        <th>Phone number</th>
      </tr>
    </thead>
    <tbody>
      <% @applications.each do |applications| %>
        <tr>
          <td><%= link_to applications.classfield.title, classfield_path(applications.classfield, data:{turbo_frame: "modal"})%></td>
          <td><%= applications.classfield.user.email %></td>
          <td><%= applications.status %></td>
          <% if applications.status == "accepted"%>
            <td><%= applications.classfield.user.phone_number%></td>
            <td>
              <% unless applications.review.present? %>
                <%= link_to "Add review", new_applicant_review_classfield_application_reviews_path(applications.classfield, applications)%>
              <% else %>
                <button disabled>Review Added</button>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>